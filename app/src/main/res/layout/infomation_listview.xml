<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/incomepay"
            android:layout_width="20dp"
            android:layout_height="67dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:text="支付"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/year"
            android:layout_width="32dp"
            android:layout_height="17dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@+id/incomepay"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="6dp"
            android:layout_height="17dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="/"
            app:layout_constraintLeft_toRightOf="@+id/year"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="2dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="6dp"
            android:layout_height="17dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="/"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/month"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp" />

        <TextView
            android:id="@+id/month"
            android:layout_width="16dp"
            android:layout_height="17dp"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item"
            android:layout_width="70dp"
            android:layout_height="17dp"
            app:layout_constraintLeft_toRightOf="@+id/incomepay"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/year" />

        <TextView
            android:id="@+id/paymentMethods"
            android:layout_width="0dp"
            android:layout_height="17dp"
            app:layout_constraintBottom_toBottomOf="@+id/item"
            android:layout_marginBottom="0dp"
            app:layout_constraintLeft_toRightOf="@+id/item"
            android:layout_marginLeft="8dp"
            app:layout_constraintRight_toLeftOf="@+id/textView13"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="15dp"
            android:layout_height="17dp"
            android:text="$ :"
            app:layout_constraintBottom_toBottomOf="@+id/money"
            android:layout_marginBottom="0dp"
            app:layout_constraintRight_toLeftOf="@+id/money"
            android:layout_marginRight="0dp" />

        <TextView
            android:id="@+id/money"
            android:layout_width="60dp"
            android:layout_height="17dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/item"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/info"
            android:layout_width="0dp"
            android:layout_height="17dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="@+id/item"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paymentMethods"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/day"
            android:layout_width="16dp"
            android:layout_height="17dp"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@+id/textView16"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>